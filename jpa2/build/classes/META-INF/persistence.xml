<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="jpaaa"
		transaction-type="RESOURCE_LOCAL">
		
		<class>cn.com.taiji.domain.Article</class>
		<class>cn.com.taiji.domain.Author</class>
		
		<class>cn.com.taiji.demo.Manager</class>
		<class>cn.com.taiji.demo.Department</class>
		
		<class>cn.com.taiji.domain.People</class>
		<class>cn.com.taiji.domain.Address</class>
		
		
		<class>cn.com.taiji.domain.User</class>
		<class>cn.com.taiji.domain.Authority</class>

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/springdata?serverTimezone=GMT&amp;useUnicode=true&amp;characterEncoding=utf-8"/>
				<!-- &amp;使用其来转义& -->
				<!-- 高版本jar包需加 ?serverTimezone=GMT，低版本jar包不需要-->
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password"
				value="13452561997hdj" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" /><!-- 高版本需com.mysql.cj.jdbc.Driver -->
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.ddl-generation"
				value="create-tables" />

			<!-- 配置JPA实现产品的属性，即hibernate的属性 -->
			<property name="hibernate.format_sql" value="true" /><!-- 是否格式化sql语句 -->
			<property name="hibernate.show_sql" value="true" /> <!-- 是否在控制台打印sql语句 -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>

</persistence>
